<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TitledPane text="Skupina: Java Štúdium" expanded="true"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <GridPane hgap="20" vgap="15" styleClass="card">

        <!-- Участники -->
        <Label text="Členovia tímu:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <ListView fx:id="membersList" prefHeight="120" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <!-- Чат -->
        <Label text="Skupinový chat:" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>
        <ListView fx:id="chatList" prefHeight="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <TextField promptText="Napísať správu..." GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Button text="Odoslať" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Материалы -->
        <Label text="Zdieľané materiály:" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-weight: bold;"/>
        <ListView fx:id="resourcesList" prefHeight="150" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        <Button text="Pridať materiál" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    </GridPane>
</TitledPane>