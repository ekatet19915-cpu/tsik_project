<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.study.client.controller.LoginController"
      alignment="CENTER" spacing="25" styleClass="root">

    <padding><Insets top="60" right="60" bottom="60" left="60"/></padding>

    <!-- Логотип -->
    <ImageView fitHeight="120" fitWidth="120">
        <image><Image url="@/images/logo.png"/></image>
    </ImageView>

    <!-- Заголовок -->
    <Label text="COLLABORATIVE STUDY PLATFORM" styleClass="title-label"/>
    <Label text="SEMESTRIAL WORK" styleClass="subtitle-label"/>

    <!-- Форма -->
    <VBox spacing="15" alignment="CENTER" prefWidth="380">
        <TextField fx:id="usernameField" promptText="Meno používateľa" styleClass="text-field"/>
        <PasswordField fx:id="passwordField" promptText="Heslo" styleClass="text-field"/>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Prihlásiť sa" styleClass="btn-primary"/>
            <Button text="Registrovať" styleClass="btn-success"/>
        </HBox>

        <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 14;"/>
    </VBox>

    <!-- Подвал -->
    <Label text="Z tejto semestrálnej úlohy môžete získať maximálne 26 bodov"
           style="-fx-font-size: 12; -fx-text-fill: #95a5a6;"/>
</VBox>